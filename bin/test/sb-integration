#!/usr/bin/env bash

# in case we changed db.json to run isolated unit tests on local dev machine
sed -i -e "s|localhost|db|" ./app/config/db.json

echo "--- running integration tests..."

docker-compose -f docker-compose-test.yml \
  run --entrypoint ./bin/entrypoint/test-sb-integration \
  signalboost

echo "--- spinning down environment..."

docker-compose -f docker-compose-test.yml down

docker ps --filter name=test_* -aq | xargs -I container_id docker rm -f container_id
